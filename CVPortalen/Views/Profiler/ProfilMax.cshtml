<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Min Profilsida</title>
    <!-- Lägg till eventuella andra nödvändiga stilfiler eller skript här -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .profile-container {
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
        }

        .profile-image-label {
            display: inline-block;
            cursor: pointer;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 20px;
        }

        .profile-details {
            font-size: 18px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        .message-form-container {
            position: fixed;
            top: 20px; /* Adjust the top value as needed */
            right: 20px; /* Adjust the right value as needed */
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        
    </style>
    @* Meddelande *@

    @if (User.Identity.IsAuthenticated)
    {
        <form asp-controller="Message" asp-action="Create" method="post">
            <div class="form-group">
                <label for="ReceiverId">Mottagar Användarnamn:</label>
                <input type="text" name="ReceiverId" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Content">Meddelande innehåll:</label>
                <textarea name="Content" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Skicka</button>
        </form>
    }

    @* Logga ut knapp *@
    @if (User.Identity.IsAuthenticated)
    {
        <form method="post" asp-controller="Account" asp-action="Loggaut">

            <h2>Du är loggad in som @User.Identity.Name</h2>
            <input type="submit" value="Logga ut" />
        </form>
    }
</head>
<body>

    <div class="profile-container">
        <input type="file" id="profile-picture-input" accept="image/*" style="display: none;">
        <label for="profile-picture-input" class="profile-image-label">
            <img src="path/to/profile-image.jpg" alt="Profilbild" class="profile-image" id="profile-image">
            <span>Ändra profilbild NIGGGAAA WHAAAAT</span>
        </label>
        <h2>John Doe</h2>
        <p class="profile-details">Ålder: 30</p>
        <p class="profile-details">Stad: Anytown</p>
        <p class="profile-details">Intressen: Coding, Reading, Traveling</p>

        <!-- Sektioner -->

        <a href="#" class="edit-profile-link">Redigera Profil</a>
    </div>

    <!--  Table :D -->
    <table class="projects-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Purpose</th>
                <th>Company</th>
                <th>Profiles</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <!-- ... ny table row om det behövs ... -->
        </tbody>
    </table>
    <button>Skapa nytt projekt</button>


    <!-- Skript för att ladda upp profilbild -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const profilePictureInput = document.getElementById('profile-picture-input');
            const profileImage = document.getElementById('profile-image');

            profilePictureInput.addEventListener('change', function (event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        profileImage.src = e.target.result;
                    };

                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
</body>
</html>
