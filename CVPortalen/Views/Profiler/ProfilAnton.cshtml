    @* Meddelande *@
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-controller="Message" asp-action="Create" method="post">
            <div class="form-group">
                <label for="ReceiverId">Mottagar Användaramn:</label>
                <input type="text" name="ReceiverId" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Content">Meddelande innehåll:</label>
                <textarea name="Content" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Skicka</button>
        </form>
    }

    @* Logga ut knapp *@
    @if (User.Identity.IsAuthenticated)
    {
        <form method="post" asp-controller="Account" asp-action="Loggaut">

            <h2>Du är loggad in som @User.Identity.Name</h2>
            <input type="submit" value="Logga ut" />
        </form>
    }

