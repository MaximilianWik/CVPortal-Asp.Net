<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h2>@Model.Skapare</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-muted">Arbetsplats:</h5>
                            <p class="font-weight-bold">@Model.TidigareErfarenheter</p>
                        </div>
                        <div class="col-md-4">
                            <h5 class="text-muted">Utbildningar:</h5>
                            <p>@Model.Utbildningar</p>
                        </div>
                        <div class="col-md-4">
                            <h5 class="text-muted">Kompetenser:</h5>
                            <p>@Model.Kompetenser</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light text-muted text-center">
                    <a asp-action="CVStart" asp-controller="CVSida" class="btn btn-primary">Tillbaka till CV-lista</a>

<!-- Your other HTML code here -->
                    @if (User.Identity.IsAuthenticated && Model != null && Model.UserId != null && Model.User.Id == User.FindFirstValue(ClaimTypes.NameIdentifier))
                    {
                        <a asp-action="EditCV" asp-controller="CVSida" asp-route-id="@Model.CVId" class="btn btn-primary">Redigera CV</a>
                    }
<!-- Your other HTML code here -->

                </div>
            </div>
        </div>
    </div>
</div>




