@model MessageViewModel
@* Vyn för att skicka ett meddelande
 *@<h2>Skicka Meddelande</h2>

<form asp-controller="Message" asp-action="SkickaMeddelande" method="post">
    <input asp-for="ReceiverId" type="hidden" value="@Model.ReceiverId" />
    <div class="form-group">
        <label asp-for="ReceiverUserName">Mottagarens Användarnamn:</label>
        <input asp-for="ReceiverUserName" class="form-control" readonly />
        <input type="hidden" asp-for="ReceiverId" />
    </div>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="form-group">
            <label asp-for="SenderId">Avsändarens ID:</label>
            <input asp-for="SenderId" class="form-control" />
        </div>
    }

    <div class="form-group">
        <label asp-for="Content">Innehåll:</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Skicka</button>
</form>





